{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": ["standard", "standard-react"],
  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-no-bind": ["error", {
      "allowArrowFunctions": true
    }]
  }
}
